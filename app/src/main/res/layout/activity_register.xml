<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sajednt.arzalarm.user.Register">

    <LinearLayout
        android:id="@+id/linearLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            app:srcCompat="@drawable/ic_arzalarm_logo"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="نام و نام خانوادگی"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/iranyekan"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textWebEmailAddress"
            android:hint="ایمیل"
            android:fontFamily="@font/iranyekan"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/editPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/iranyekan"
            android:hint="رمز عبور"
            android:inputType="textPassword"
            android:gravity="right"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/editConfirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="right"
            android:fontFamily="@font/iranyekan"
            android:hint="تکرار رمز عبور"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginTop="10dp"/>



        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ثبت نام"
            android:fontFamily="@font/iranyekan"
            android:backgroundTint="@color/green" />

        <TextView
            android:id="@+id/textprivacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="سیاست حفظ حریم خصوصی"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/iranyekan"/>
    </LinearLayout>

</RelativeLayout>