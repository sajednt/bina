<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sajednt.arzalarm.user.Code">



    <LinearLayout
        android:id="@+id/linearLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="کد ارسال شده به ایمیل خود را وارد کنید"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/iranyekan"/>

        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            app:bar_enabled="true"
            app:bar_height="2dp"
            app:length="5"
            app:otp=""
            app:bar_active_color="@color/green"
            app:otp_text_size="24dp"/>

        <TextView
            android:id="@+id/textsendcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ارسال دوباره"
            android:layout_marginTop="20dp"
            android:textColor="@color/green"
            android:gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/iranyekan"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true" />



    </LinearLayout>

</RelativeLayout>