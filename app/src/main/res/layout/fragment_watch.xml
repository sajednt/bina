<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/indicator_tickerinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorName="BallTrianglePathIndicator"
            app:indicatorColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tickerinfolinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <com.sajednt.arzalarm.functions.SquareLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/priceChangePrecent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:fontFamily="@font/iranyekan"
                    android:background="@drawable/radius_green"/>

            </com.sajednt.arzalarm.functions.SquareLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
    >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:weightSum="2"
                android:layout_margin="4dp">

                <com.dd.ShadowLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:sl_shadowRadius="2dp"
                    app:sl_shadowColor="#AA000000"
                    app:sl_dx="0dp"
                    app:sl_dy="0dp"
                    app:sl_cornerRadius="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/priceLow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranyekan"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/textView231"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranyekan"
                            android:text="کمترین قیمت : "
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:gravity="right"/>
                    </LinearLayout>
                </com.dd.ShadowLayout>


                <com.dd.ShadowLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:sl_shadowRadius="2dp"
                    app:sl_shadowColor="#AA000000"
                    app:sl_dx="0dp"
                    app:sl_dy="0dp"
                    app:sl_cornerRadius="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/priceHigh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranyekan"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranyekan"
                            android:text="بیشترین قیمت : "
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:gravity="right"/>
                    </LinearLayout>
                </com.dd.ShadowLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:weightSum="2"
                android:layout_margin="4dp">

                <com.dd.ShadowLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:sl_shadowRadius="2dp"
                    app:sl_shadowColor="#AA000000"
                    app:sl_dx="0dp"
                    app:sl_dy="0dp"
                    app:sl_cornerRadius="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/priceClose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranyekan"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/textView2321"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranyekan"
                            android:text="قیمت پایان : "
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:gravity="right"/>
                    </LinearLayout>
                </com.dd.ShadowLayout>


                <com.dd.ShadowLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:sl_shadowRadius="2dp"
                    app:sl_shadowColor="#AA000000"
                    app:sl_dx="0dp"
                    app:sl_dy="0dp"
                    app:sl_cornerRadius="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/priceOpen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranyekan"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/textView213"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranyekan"
                            android:text="قیمت شروع : "
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:gravity="right"/>
                    </LinearLayout>
                </com.dd.ShadowLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:weightSum="2"
                android:layout_margin="4dp">

                <com.dd.ShadowLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:sl_shadowRadius="2dp"
                    app:sl_shadowColor="#AA000000"
                    app:sl_dx="0dp"
                    app:sl_dy="0dp"
                    app:sl_cornerRadius="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/priceVolume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranyekan"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/textView2311"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranyekan"
                            android:text="ولیوم : "
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:gravity="right"/>
                    </LinearLayout>
                </com.dd.ShadowLayout>


                <com.dd.ShadowLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:sl_shadowRadius="2dp"
                    app:sl_shadowColor="#AA000000"
                    app:sl_dx="0dp"
                    app:sl_dy="0dp"
                    app:sl_cornerRadius="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/white"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/priceChange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranyekan"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="@color/black"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/textView123"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/iranyekan"
                            android:text="نوسان قیمت : "
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:gravity="right"/>
                    </LinearLayout>
                </com.dd.ShadowLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>